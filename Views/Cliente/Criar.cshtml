@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Criar Cliente";
}

<h1>Criar Cliente</h1>
<form action="/Cliente/Criar" method="post" validate>
    <div class="form-group">
        <label class="control-label col-sm-2" for="UidTipo">Tipo Cliente</label>
        <div class="form-group">
            <select name="UidTipoCliente" class="custom-select">
                @{ var tipoCliente = ViewBag.TipoCliente; }
                @foreach (var tipo in tipoCliente)
                {
                    //Propriedades da da classe ItemLista
                    <option value="@tipo.Uid">@tipo.Designacao</option>
                }

            </select>
        </div>
    </div>


    <div class="form-group">
        <label class="control-label col-sm-2" for="Nome">Nome:</label>
        <div class="col-sm-10">
            <input class="form-control" type="text" name="Nome" required="required" />
        </div>
    </div>
    <div class="form-group">
        <label for="Contacto">Contacto:</label>
        <div class="col-sm-10">
            <input class="form-control" type="text" name="Contacto" required="required" />
        </div>
    </div>
    <div class="form-group">
        <label for="EMail">E-Mail:</label>
        <div class="col-sm-10">
            <input class="form-control" type="text" name="EMail" required="required" />
        </div>
    </div>
    <div class="form-group">
        <label for="DataNascimento">Data Nascimento:</label>
        <div class="col-sm-10">
            <input class="form-control" type="date" name="DataNascimento" required="required" />
        </div>
    </div>

        <!-- Localização -->
    <div class="form-group">
        <label for="UidLocalizacao">Localização Pretendida:</label>
        <div class="col-sm-10">
            <select class="form-control" name="UidLocalizacao">
                @{ var localizacoes = ViewBag.Localizacao; }
                @foreach (var localizacao in localizacoes)
                {
                    //Propriedades da da classe ItemLista
                    <option value="@localizacao.Uid">@localizacao.Designacao</option>
                }

            </select>
        </div>
    </div>

        <!-- Tipologia-->
    <div class="form-group">
        <label for="UidTipologia">Tipologia:</label>
        <div class="col-sm-10">
            <select class="form-control" name="UidTipologia">
                @{ var tipologias = ViewBag.Tipologia; }
                @foreach (var tipologia in tipologias)
                {
                    //Propriedades da da classe ItemLista
                    <option value="@tipologia.Uid">@tipologia.Designacao</option>
                }

            </select>
        </div>
    </div>

    <div class="form-group">
        <label for="PrecoPretendido">Preço Prentendido:</label>
        <div class="col-sm-10">
            <input class="form-control" type="text" name="PrecoPretendido" />
        </div>
    </div>

    <div class="form-group">
        <label for="Observacoes">Observações:</label>
        <div class="col-sm-10">
            <input class="form-control" type="text" name="Observacoes" />
        </div>
    </div>
        <div class="form-group">
            <input type="submit" name="enviar"
                   value="Criar Cliente" class="btn btn-dark" />
        </div>
</form>